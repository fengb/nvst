%dl
  %dt Symbol
  %dd= @investment.symbol

  %dt Name
  %dd= @investment.name

  %dt 52 week price
  %dd #{number_to_currency @investment.year_low} - #{number_to_currency @investment.year_high}

  %dt Price
  %dd
    = link_to 'table', [:prices, @investment]
    %div#price-wrapper
    :javascript
      $.getJSON('#{url_for([:prices, @investment])}', function(data){
        new InvestmentGraph('#price-wrapper', 'adjusted_close').add('#{@investment.symbol}', data)
      })
